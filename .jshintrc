// cf : http://www.jshint.com/docs/options/
{
    "expr": true,
    "camelcase": true,
    "curly": true,
    "devel": false,
    "eqeqeq": true,
    "forin": true,
    "immed": true,
    "indent": 4,
    "latedef": false,
    "maxcomplexity": 4,
    "maxdepth": 2,
    "maxparams": 5,
    "maxstatements": 15,
    "newcap": true,
    "noarg": true,
    "node": true,
    "noempty": true,
    "nonew": "true",
    "quotmark": true,
    "sub": true,
    "trailing": true,
    "undef": true,
    "globals": {
        "before": true,
        "describe": true,
        "it": true,
        "$": true
    }
}